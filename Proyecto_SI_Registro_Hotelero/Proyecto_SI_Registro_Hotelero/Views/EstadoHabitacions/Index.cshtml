@model IEnumerable<Proyecto_SI_Registro_Hotelero.Models.EstadoHabitacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Estados de Habitaciones</h1>
<br />

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-file"></i> Nuevo Estado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.EstadoHId">Editar</a> 
                <a asp-action="Details"  class="btn btn-outline-info" asp-route-id="@item.EstadoHId">Detalles</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.EstadoHId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
