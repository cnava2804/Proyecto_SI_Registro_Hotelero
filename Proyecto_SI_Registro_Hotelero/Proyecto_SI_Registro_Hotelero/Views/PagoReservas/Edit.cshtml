@model Proyecto_SI_Registro_Hotelero.Models.PagoReserva

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PReservaId" />
            <div class="form-group">
                <label asp-for="PReservaTitular" class="control-label"></label>
                <input asp-for="PReservaTitular" class="form-control" />
                <span asp-validation-for="PReservaTitular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PReservaCedula" class="control-label"></label>
                <input asp-for="PReservaCedula" class="form-control" />
                <span asp-validation-for="PReservaCedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PReservaNumeroTarjeta" class="control-label"></label>
                <input asp-for="PReservaNumeroTarjeta" class="form-control" />
                <span asp-validation-for="PReservaNumeroTarjeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PReservaFechaVencimiento" class="control-label"></label>
                <input asp-for="PReservaFechaVencimiento" class="form-control" />
                <span asp-validation-for="PReservaFechaVencimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PReservaCodigoTarjeta" class="control-label"></label>
                <input asp-for="PReservaCodigoTarjeta" class="form-control" />
                <span asp-validation-for="PReservaCodigoTarjeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservaHId" class="control-label"></label>
                <select asp-for="ReservaHId" class="form-control" asp-items="ViewBag.ReservaHId"></select>
                <span asp-validation-for="ReservaHId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
