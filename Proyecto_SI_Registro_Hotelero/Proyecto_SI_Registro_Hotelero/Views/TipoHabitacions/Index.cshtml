@model IEnumerable<Proyecto_SI_Registro_Hotelero.Models.TipoHabitacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-file"></i> Nuevo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoDescripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDescripcion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.TipoHId">Editar</a>
                <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.TipoHId">Detalles</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TipoHId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
