@model IEnumerable<Proyecto_SI_Registro_Hotelero.Models.TipoHabitacion>

@{
    ViewData["Title"] = "Index";
}
<body id="Imag4">
    <h1 style="margin-top:-65px;" class="text-white"><b>Tipos de Habitaciones</b></h1>
    <br />
    <p style="margin-top:50px;">
        <a asp-action="Create" class="btn btn-success"><i class="far fa-file" ></i> Nuevo </a>
    </p>
    <table class="table table-light table-borderless" style="border-radius:25px;">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDescripcion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDescripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@item.TipoHId">Editar</a>
                        <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.TipoHId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.TipoHId">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>