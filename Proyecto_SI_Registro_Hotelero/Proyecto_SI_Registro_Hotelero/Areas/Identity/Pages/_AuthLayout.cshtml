@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<body id="Inicio">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card login-logout-tab" id="transp" style="margin-top:-120px; border-color:azure;">

                <div class="card-header" style="border-color: azure;">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item" style="font-family:'Times New Roman'">
                            <a class="nav-link" href='/Identity/Account/Login'><b>Iniciar Sesión</b></a>
                        </li>
                        <li class="nav-item"style="font-family:'Times New Roman'">
                            <a class="nav-link" href='/Identity/Account/Register'><b>Regístrarme</b></a>
                        </li>
                    </ul>
                </div>
                <div class="card-content">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
    @section Scripts{

        @await RenderSectionAsync("Scripts", required: false)

        <script>
            $(function () {
                var current = location.pathname;
                $('.nav-tabs li a').each(function () {
                    var $this = $(this);
                    if (current.indexOf($this.attr('href')) !== -1) {
                        $this.addClass('active');
                    }
                })
            })

        </script>
    }
